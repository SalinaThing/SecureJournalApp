@page "/about"
@inject NavigationManager Navigation

<div class="about-page">
    <!-- Header -->
    <header class="page-header">
        <div class="container">
            <h1 class="page-title">About SecureJournal</h1>
            <p class="page-subtitle">Our story, mission, and values</p>
        </div>
    </header>

    <!-- Mission Section -->
    <section class="mission-section">
        <div class="container">
            <div class="mission-content">
                <h2 class="section-title">Our Mission</h2>
                <p class="mission-statement">
                    SecureJournal was born from the belief that regular self-reflection is essential for personal growth
                    and mental well-being. In our fast-paced digital world, we wanted to create a private sanctuary
                    where individuals can pause, reflect, and understand themselves better.
                </p>
                <p class="mission-detail">
                    Our application combines the timeless practice of journaling with modern technology, offering
                    powerful analytics while maintaining complete privacy. All your data stays securely on your
                    device – we believe your personal reflections should remain truly personal.
                </p>
            </div>
        </div>
    </section>

    <!-- Values Section -->
    <section class="values-section">
        <div class="container">
            <h2 class="section-title">Our Core Values</h2>
            <div class="values-grid">
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-user-shield"></i>
                    </div>
                    <h3>Privacy First</h3>
                    <p>Your journal is yours alone. We don't store your data on servers or analyze it for profit.</p>
                </div>
                
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-brain"></i>
                    </div>
                    <h3>Mindful Design</h3>
                    <p>Every feature is designed to enhance your self-reflection journey, not distract from it.</p>
                </div>
                
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <h3>Data Insights</h3>
                    <p>Turn reflections into insights with powerful, privacy-focused analytics.</p>
                </div>
                
                <div class="value-card">
                    <div class="value-icon">
                        <i class="fas fa-palette"></i>
                    </div>
                    <h3>Customizable Experience</h3>
                    <p>Make SecureJournal truly yours with flexible themes and settings.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Team/Philosophy Section -->
    <section class="philosophy-section">
        <div class="container">
            <div class="philosophy-content">
                <div class="philosophy-text">
                    <h2 class="section-title">Our Philosophy</h2>
                    <p>
                        We believe that journaling is more than just writing – it's a practice of mindfulness, 
                        self-discovery, and emotional processing. In an age of constant connectivity and data sharing, 
                        we champion the right to private thought and personal space.
                    </p>
                    <p>
                        SecureJournal is built for those who value introspection and want a tool that respects 
                        their privacy while providing meaningful insights into their personal growth journey.
                    </p>
                </div>
                <div class="philosophy-visual">
                    <div class="visual-item">
                        <i class="fas fa-lock"></i>
                        <p>Local Storage</p>
                    </div>
                    <div class="visual-item">
                        <i class="fas fa-chart-bar"></i>
                        <p>Analytics</p>
                    </div>
                    <div class="visual-item">
                        <i class="fas fa-pen-fancy"></i>
                        <p>Rich Text</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Preview -->
    <section class="features-preview">
        <div class="container">
            <h2 class="section-title">What Makes Us Different</h2>
            <div class="comparison">
                <div class="comparison-item">
                    <h3><i class="fas fa-check-circle"></i> SecureJournal</h3>
                    <ul>
                        <li>100% local data storage</li>
                        <li>No accounts or login required</li>
                        <li>One-time purchase, no subscriptions</li>
                        <li>Advanced privacy features</li>
                    </ul>
                </div>
                <div class="comparison-item comparison-other">
                    <h3><i class="fas fa-times-circle"></i> Other Journal Apps</h3>
                    <ul>
                        <li>Cloud storage required</li>
                        <li>Mandatory account creation</li>
                        <li>Monthly subscriptions</li>
                        <li>Data mining for analytics</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="about-cta">
        <div class="container">
            <h2>Ready to Start Your Private Journaling Journey?</h2>
            <p>Experience the difference of a truly private journaling application</p>
            <div class="cta-buttons">
                <button class="btn btn-primary btn-lg" @onclick="NavigateToRegister">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </button>
                <button class="btn btn-outline-secondary btn-lg" @onclick="NavigateToFeatures">
                    <i class="fas fa-list-ul me-2"></i>Explore Features
                </button>
            </div>
        </div>
    </section>
</div>

@code {
    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }

    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }

    private void NavigateToFeatures()
    {
        Navigation.NavigateTo("/features");
    }
}

