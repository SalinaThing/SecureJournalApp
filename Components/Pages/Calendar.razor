@page "/calendar"
@using SecureJournalApp.Models
@inject SecureJournalApp.Services.JournalService JournalService
@inject SecureJournalApp.Services.AuthService AuthService
@inject NavigationManager Navigation

<RedirectToLogin />

<div class="calendar-container">
    <!-- Calendar Header -->
    <div class="calendar-header">
        <h2 class="page-title">
            <i class="fas fa-calendar-alt me-2"></i>Journal Calendar
        </h2>
        <div class="calendar-controls">
            <button class="btn btn-icon" @onclick="PreviousMonth">
                <i class="fas fa-chevron-left"></i>
            </button>
            <div class="current-month">
                <span class="month-year">@CurrentDate.ToString("MMMM yyyy")</span>
                <button class="btn btn-today" @onclick="GoToToday">
                    <i class="fas fa-calendar-day"></i> Today
                </button>
            </div>
            <button class="btn btn-icon" @onclick="NextMonth">
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
        <div class="view-toggle">
            <button class="btn @(ViewMode == CalendarView.Month ? "btn-primary" : "btn-outline")" 
                    @onclick="() => SetViewMode(CalendarView.Month)">
                Month
            </button>
            <button class="btn @(ViewMode == CalendarView.Week ? "btn-primary" : "btn-outline")" 
                    @onclick="() => SetViewMode(CalendarView.Week)">
                Week
            </button>
        </div>
    </div>

    <!-- Calendar Grid -->
    <div class="calendar-grid @ViewMode.ToString().ToLower()">
        <!-- Day Headers -->
        <div class="calendar-day-header">
            @foreach (var day in DaysOfWeek)
            {
                <div class="day-header">@day</div>
            }
        </div>

        <!-- Calendar Days -->
        @for (int week = 0; week < CalendarWeeks; week++)
        {
            <div class="calendar-week">
                @for (int day = 0; day < 7; day++)
                {
                    var currentDay = CalendarDays[week * 7 + day];
                    var journalEntry = GetJournalForDate(currentDay);
                    var moodEmoji = GetMoodEmoji(journalEntry?.PrimaryMood);
                    
                    <div class="calendar-day @GetDayClass(currentDay)">
                        <div class="day-header">
                            <span class="day-number">@currentDay.Day</span>
                            @if (currentDay.Date == DateTime.Today)
                            {
                                <span class="today-indicator"></span>
                            }
                        </div>
                        
                        @* <div class="day-content">
                            @if (journalEntry != null)
                            {
                                <div class="entry-preview" @onclick="() => ViewEntry(journalEntry.Id.ToString())">
                                    <div class="mood-display">
                                        <span class="mood-emoji">@moodEmoji</span>
                                        @if (journalEntry.SecondaryMoods?.Any() == true)
                                        {
                                            <span class="secondary-mood">+@journalEntry.SecondaryMoods.Count</span>
                                        }
                                    </div>
                                    <div class="entry-title">@journalEntry.Title</div>
                                    @if (journalEntry.Tags?.Any() == true)
                                    {
                                        <div class="entry-tags">
                                            @foreach (var tag in journalEntry.Tags.Take(2))
                                            {
                                                <span class="tag-badge">@tag</span>
                                            }
                                            @if (journalEntry.Tags.Count > 2)
                                            {
                                                <span class="more-tags">+@(journalEntry.Tags.Count - 2)</span>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            else if (currentDay <= DateTime.Today && currentDay >= new DateTime(CurrentDate.Year, CurrentDate.Month, 1))
                            {
                                <button class="add-entry-btn" @onclick="() => CreateNewEntry(currentDay)">
                                    <i class="fas fa-plus"></i>
                                    <span>Add Entry</span>
                                </button>
                            }
                        </div> *@
                        
                        <!-- Streak indicator -->
                        @if (IsStreakDay(currentDay))
                        {
                            <div class="streak-dot"></div>
                        }
                    </div>
                }
            </div>
        }
    </div>

    <!-- Stats Panel -->
    <div class="stats-panel">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-fire"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@CurrentStreak</div>
                <div class="stat-label">Current Streak</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-trophy"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@LongestStreak</div>
                <div class="stat-label">Longest Streak</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@EntriesThisMonth</div>
                <div class="stat-label">This Month</div>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-heart"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@PositivePercentage%</div>
                <div class="stat-label">Positive</div>
            </div>
        </div>
    </div>

    <!-- Quick Filter Panel -->
    <div class="filter-panel">
        <h4>Filter by Mood</h4>
        <div class="mood-filters">
            @foreach (var mood in AllMoods)
            {
                <button class="mood-filter @(SelectedMoods.Contains(mood) ? "active" : "")" 
                        @onclick="() => ToggleMoodFilter(mood)">
                    <span class="mood-emoji">@GetMoodEmoji(mood)</span>
                    <span class="mood-name">@mood</span>
                </button>
            }
        </div>
        
        <h4>Filter by Tags</h4>
        <div class="tag-filters">
            @foreach (var tag in PopularTags)
            {
                <button class="tag-filter @(SelectedTags.Contains(tag) ? "active" : "")" 
                        @onclick="() => ToggleTagFilter(tag)">
                    <i class="fas fa-tag"></i>
                    <span>@tag</span>
                </button>
            }
        </div>
    </div>
</div>

@code {
    private DateTime CurrentDate = DateTime.Today;
    private List<DateTime> CalendarDays = new();
    private CalendarView ViewMode = CalendarView.Month;
    private List<string> SelectedMoods = new();
    private List<string> SelectedTags = new();
    
    private readonly string[] DaysOfWeek = { "Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat" };
    private readonly List<string> AllMoods = new()
    {
        "Happy", "Excited", "Relaxed", "Grateful", "Confident",
        "Calm", "Thoughtful", "Curious", "Nostalgic", "Bored",
        "Sad", "Angry", "Stressed", "Lonely", "Anxious"
    };
    
    private int CalendarWeeks => ViewMode == CalendarView.Month ? 6 : 1;
    
    // Stats
    private int CurrentStreak = 14;
    private int LongestStreak = 30;
    private int EntriesThisMonth = 0;
    private int PositivePercentage = 78;
    private List<string> PopularTags = new() { "Work", "Health", "Travel", "Fitness", "Family", "Personal Growth" };
    
    protected override void OnInitialized()
    {
        GenerateCalendar();
        CalculateStats();
    }
    
    private void GenerateCalendar()
    {
        CalendarDays.Clear();
        
        if (ViewMode == CalendarView.Month)
        {
            var firstDayOfMonth = new DateTime(CurrentDate.Year, CurrentDate.Month, 1);
            var startDate = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek);
            
            for (int i = 0; i < 42; i++) // 6 weeks
            {
                CalendarDays.Add(startDate.AddDays(i));
            }
        }
        else // Week view
        {
            var startOfWeek = CurrentDate.AddDays(-(int)CurrentDate.DayOfWeek);
            
            for (int i = 0; i < 7; i++)
            {
                CalendarDays.Add(startOfWeek.AddDays(i));
            }
        }
        
        CalculateStats();
    }
    
    private void CalculateStats()
    {
        var entries = JournalService.GetAll();
        var thisMonthEntries = entries.Where(e => e.EntryDate.Month == CurrentDate.Month && e.EntryDate.Year == CurrentDate.Year);
        EntriesThisMonth = thisMonthEntries.Count();
        
        // Calculate positive percentage
        var positiveEntries = entries.Count(e => e.PrimaryMood != null && 
            (e.PrimaryMood == "Happy" || e.PrimaryMood == "Excited" || e.PrimaryMood == "Relaxed" || 
             e.PrimaryMood == "Grateful" || e.PrimaryMood == "Confident"));
        PositivePercentage = entries.Count > 0 ? (positiveEntries * 100 / entries.Count) : 0;
    }
    
    private JournalEntry? GetJournalForDate(DateTime date)
    {
        return JournalService.GetAll()
            .FirstOrDefault(e => e.EntryDate.Date == date.Date);
    }
    
    private string GetMoodEmoji(string? mood)
    {
        return mood switch
        {
            "Happy" => "😊",
            "Excited" => "🎉",
            "Relaxed" => "😌",
            "Grateful" => "🙏",
            "Confident" => "💪",
            "Calm" => "🧘",
            "Thoughtful" => "🤔",
            "Curious" => "🔍",
            "Nostalgic" => "📸",
            "Bored" => "😒",
            "Sad" => "😢",
            "Angry" => "😠",
            "Stressed" => "😫",
            "Lonely" => "😔",
            "Anxious" => "😰",
            _ => "📝"
        };
    }
    
    private string GetDayClass(DateTime date)
    {
        var classes = new List<string>();
        
        if (date.Date == DateTime.Today)
            classes.Add("today");
        if (date.Month != CurrentDate.Month)
            classes.Add("other-month");
        if (GetJournalForDate(date) != null)
            classes.Add("has-entry");
        if (date.DayOfWeek == DayOfWeek.Saturday || date.DayOfWeek == DayOfWeek.Sunday)
            classes.Add("weekend");
        
        return string.Join(" ", classes);
    }
    
    private bool IsStreakDay(DateTime date)
    {
        // Check if this day is part of current streak
        // Simplified logic - in real app, calculate from JournalService
        var entry = GetJournalForDate(date);
        return entry != null && entry.EntryDate.Date >= DateTime.Today.AddDays(-CurrentStreak);
    }
    
    private void PreviousMonth()
    {
        CurrentDate = CurrentDate.AddMonths(-1);
        GenerateCalendar();
    }
    
    private void NextMonth()
    {
        CurrentDate = CurrentDate.AddMonths(1);
        GenerateCalendar();
    }
    
    private void GoToToday()
    {
        CurrentDate = DateTime.Today;
        GenerateCalendar();
    }
    
    private void SetViewMode(CalendarView mode)
    {
        ViewMode = mode;
        GenerateCalendar();
    }
    
    private void ViewEntry(Guid entryId)
    {
        Navigation.NavigateTo($"/entry/{entryId}");
    }
    
    private void CreateNewEntry(DateTime date)
    {
        Navigation.NavigateTo($"/entry/edit?date={date:yyyy-MM-dd}");
    }
    
    private void ToggleMoodFilter(string mood)
    {
        if (SelectedMoods.Contains(mood))
            SelectedMoods.Remove(mood);
        else
            SelectedMoods.Add(mood);
        
        // Apply filter logic here
    }
    
    private void ToggleTagFilter(string tag)
    {
        if (SelectedTags.Contains(tag))
            SelectedTags.Remove(tag);
        else
            SelectedTags.Add(tag);
        
        // Apply filter logic here
    }
    
    private enum CalendarView { Month, Week }
}

