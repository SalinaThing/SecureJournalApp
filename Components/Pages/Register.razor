@page "/register"
@inject NavigationManager Navigation

<div class="register-page">
    <div class="register-container">
        <!-- Left Panel -->
        <div class="register-left">
            <button class="back-btn" @onclick="NavigateToHome">
                <i class="fas fa-arrow-left"></i>
            </button>
            
            <div class="register-content">
                <h1 class="register-title">Create Your Journal</h1>
                <p class="register-subtitle">Start your private journaling journey in seconds</p>
                
                <div class="register-form">
                    <div class="form-group">
                        <label for="journalName">Journal Name</label>
                        <input type="text" id="journalName" class="form-control" 
                               placeholder="My Personal Journal" />
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Secure Password</label>
                        <input type="password" id="password" class="form-control" 
                               placeholder="Create a strong password" />
                    </div>
                    
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" id="confirmPassword" class="form-control" 
                               placeholder="Re-enter your password" />
                    </div>
                    
                    <div class="form-group">
                        <label>Security Option</label>
                        <div class="security-options">
                            <label class="security-option">
                                <input type="radio" name="security" checked />
                                <div class="option-content">
                                    <i class="fas fa-lock"></i>
                                    <span>Password Protection</span>
                                    <small>Secure with password</small>
                                </div>
                            </label>
                            <label class="security-option">
                                <input type="radio" name="security" />
                                <div class="option-content">
                                    <i class="fas fa-key"></i>
                                    <span>PIN Protection</span>
                                    <small>Quick 4-6 digit PIN</small>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="privacy-notice">
                        <i class="fas fa-info-circle"></i>
                        <p>All data stays on your device. No accounts, no cloud storage, no data sharing.</p>
                    </div>
                    
                    <button class="btn btn-primary btn-block" @onclick="CreateJournal">
                        <i class="fas fa-book me-2"></i>Create My Journal
                    </button>
                </div>
                
                <div class="register-footer">
                    <p>Already have a journal? <a href="#" @onclick="NavigateToLogin">Access it here</a></p>
                </div>
            </div>
        </div>
        
        <!-- Right Panel -->
        <div class="register-right">
            <div class="benefits-panel">
                <h2><i class="fas fa-check-circle"></i> What You Get</h2>
                
                <div class="benefit-item">
                    <i class="fas fa-shield-alt"></i>
                    <div>
                        <h3>Complete Privacy</h3>
                        <p>Your journal is encrypted and stored only on your device</p>
                    </div>
                </div>
                
                <div class="benefit-item">
                    <i class="fas fa-infinity"></i>
                    <div>
                        <h3>One-Time Setup</h3>
                        <p>No subscriptions, no recurring payments</p>
                    </div>
                </div>
                
                <div class="benefit-item">
                    <i class="fas fa-chart-line"></i>
                    <div>
                        <h3>Smart Analytics</h3>
                        <p>Gain insights into your mood and writing patterns</p>
                    </div>
                </div>
                
                <div class="benefit-item">
                    <i class="fas fa-calendar-alt"></i>
                    <div>
                        <h3>Daily Reminders</h3>
                        <p>Build consistent journaling habits</p>
                    </div>
                </div>
                
                <div class="security-badge">
                    <i class="fas fa-user-shield"></i>
                    <p>Your Data Never Leaves Your Device</p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }

    private void NavigateToLogin()
    {
        // Navigate to login page (not implemented in this example)
        Navigation.NavigateTo("/login");
    }

    private void CreateJournal()
    {
        // Create journal logic here
        Navigation.NavigateTo("/login");
    }
}

