@page "/"
@inject NavigationManager Navigation

<div class="homepage-container">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="hero-content">
            <div class="hero-text">
                <h1 class="hero-title">Welcome to <span class="brand-name">SecureJournal</span></h1>
                <p class="hero-subtitle">Your secure, private space for daily reflection and personal growth</p>
                <p class="hero-description">
                    A modern desktop application that combines rich journaling features with powerful analytics
                    to help you understand your thoughts, emotions, and patterns over time.
                </p>
                <div class="hero-actions">
                    @* <button class="btn btn-primary btn-lg" @onclick="NavigateToRegister"> *@
                        <i class="fas fa-user-plus me-2"></i>Start Your Journal Journey
                    @* </button> *@
                    <button class="btn btn-outline-secondary btn-lg" @onclick="NavigateToFeatures">
                        <i class="fas fa-info-circle me-2"></i>Explore Features
                    </button>
                </div>
            </div>
            <div class="hero-image">
                <div class="mockup-dashboard">
                    <!-- Same mockup content from original -->
                    <div class="mockup-header">
                        <div class="mockup-date">Today's Entry</div>
                        <div class="mockup-mood">😊 Happy</div>
                    </div>
                    <div class="mockup-content">
                        <p class="mockup-text">Today was productive! Completed my project and felt accomplished...</p>
                        <div class="mockup-tags">
                            <span class="mockup-tag">Work</span>
                            <span class="mockup-tag">Accomplishment</span>
                            <span class="mockup-tag">Growth</span>
                        </div>
                    </div>
                    <div class="mockup-analytics">
                        <div class="analytics-item">
                            <span class="analytics-label">Current Streak</span>
                            <span class="analytics-value">14 days</span>
                        </div>
                        <div class="analytics-item">
                            <span class="analytics-label">Mood Trend</span>
                            <span class="analytics-value">80% Positive</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Quick Features Preview -->
    <section class="preview-section">
        <div class="section-header">
            <h2 class="section-title">Why Choose SecureJournal?</h2>
            <p class="section-subtitle">Experience the perfect blend of privacy and powerful insights</p>
        </div>

        <div class="preview-cards">
            <div class="preview-card">
                <i class="fas fa-lock fa-3x"></i>
                <h3>Complete Privacy</h3>
                <p>Your data stays on your device, encrypted and secure.</p>
            </div>
            <div class="preview-card">
                <i class="fas fa-chart-line fa-3x"></i>
                <h3>Smart Analytics</h3>
                <p>Gain insights into your emotional patterns and habits.</p>
            </div>
            <div class="preview-card">
                <i class="fas fa-calendar-check fa-3x"></i>
                <h3>Daily Habits</h3>
                <p>Build consistent journaling routines with streak tracking.</p>
            </div>
        </div>

        <div class="preview-actions">
            <button class="btn btn-primary" @onclick="NavigateToFeatures">
                <i class="fas fa-list-ul me-2"></i>See All Features
            </button>
            <button class="btn btn-outline-secondary" @onclick="NavigateToAbout">
                <i class="fas fa-info-circle me-2"></i>Learn About Us
            </button>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-content">
            <h2 class="cta-title">Ready to Start Your Journey?</h2>
            <p class="cta-subtitle">
                Join thousands who have discovered the power of daily reflection
            </p>
            @* <button class="btn btn-primary btn-xl" @onclick="NavigateToRegister">
                <i class="fas fa-book me-2"></i>Create Your Free Journal
            </button> *@
        </div>
    </section>
</div>

@code {
    // private void NavigateToRegister()
    // {
    //     Navigation.NavigateTo("/register");
    // }

    private void NavigateToFeatures()
    {
        Navigation.NavigateTo("/features");
    }

    private void NavigateToAbout()
    {
        Navigation.NavigateTo("/about");
    }
}

<style>
    /* Keep only the styles needed for the home page */
    .homepage-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .hero-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        border-radius: 20px;
        margin-top: 20px;
        margin-bottom: 60px;
    }

    .hero-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 60px;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 40px;
    }

    .hero-text {
        flex: 1;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 20px;
        line-height: 1.2;
        color: #2c3e50;
    }

    .brand-name {
        color: #3498db;
        background: linear-gradient(45deg, #3498db, #2ecc71);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: #34495e;
        margin-bottom: 25px;
        font-weight: 600;
    }

    .hero-description {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #5d6d7e;
        margin-bottom: 40px;
        max-width: 600px;
    }

    .hero-actions {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    .btn {
        padding: 15px 30px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-primary {
        background: linear-gradient(45deg, #3498db, #2ecc71);
        color: white;
        box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(52, 152, 219, 0.4);
        }

    .btn-outline-secondary {
        background: transparent;
        color: #3498db;
        border: 2px solid #3498db;
    }

        .btn-outline-secondary:hover {
            background: rgba(52, 152, 219, 0.1);
            transform: translateY(-2px);
        }

    .btn-lg {
        font-size: 1.1rem;
        padding: 18px 36px;
    }

    .btn-xl {
        font-size: 1.2rem;
        padding: 20px 40px;
    }

    /* Mockup Dashboard (same as before) */
    .mockup-dashboard {
        background: white;
        border-radius: 15px;
        padding: 25px;
        width: 400px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
    }

    .mockup-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 15px;
        border-bottom: 2px solid #f0f0f0;
    }

    .mockup-date {
        font-weight: 600;
        color: #2c3e50;
        font-size: 1.2rem;
    }

    .mockup-mood {
        background: #e8f6f3;
        color: #16a085;
        padding: 8px 16px;
        border-radius: 50px;
        font-size: 0.9rem;
    }

    .mockup-content {
        margin-bottom: 25px;
    }

    .mockup-text {
        color: #5d6d7e;
        line-height: 1.6;
        margin-bottom: 15px;
        font-style: italic;
    }

    .mockup-tags {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .mockup-tag {
        background: #f8f9fa;
        color: #3498db;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        border: 1px solid #e0e0e0;
    }

    .mockup-analytics {
        display: flex;
        gap: 20px;
        padding-top: 20px;
        border-top: 2px solid #f0f0f0;
    }

    .analytics-item {
        flex: 1;
        text-align: center;
    }

    .analytics-label {
        display: block;
        font-size: 0.9rem;
        color: #7f8c8d;
        margin-bottom: 5px;
    }

    .analytics-value {
        display: block;
        font-size: 1.3rem;
        font-weight: 700;
        color: #2c3e50;
    }

    /* Preview Section */
    .preview-section {
        padding: 80px 0;
        text-align: center;
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 15px;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: #7f8c8d;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .preview-cards {
        display: flex;
        justify-content: center;
        gap: 40px;
        margin-bottom: 50px;
        flex-wrap: wrap;
    }

    .preview-card {
        flex: 1;
        min-width: 250px;
        max-width: 300px;
        padding: 40px 25px;
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        border: 1px solid #e0e0e0;
        transition: all 0.3s ease;
    }

        .preview-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }

        .preview-card i {
            color: #3498db;
            margin-bottom: 25px;
        }

        .preview-card h3 {
            font-size: 1.5rem;
            color: #2c3e50;
            margin-bottom: 15px;
        }

        .preview-card p {
            color: #5d6d7e;
            line-height: 1.6;
        }

    .preview-actions {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* CTA Section */
    .cta-section {
        padding: 80px 0;
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        color: white;
        border-radius: 20px;
        margin: 40px 0;
        text-align: center;
    }

    .cta-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 40px;
    }

    .cta-title {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .cta-subtitle {
        font-size: 1.3rem;
        margin-bottom: 40px;
        opacity: 0.9;
    }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .hero-content {
            flex-direction: column;
            text-align: center;
            padding: 0 20px;
        }

        .hero-description {
            margin: 0 auto 40px;
        }

        .hero-actions {
            justify-content: center;
        }
    }

    @@media (max-width: 768px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .preview-cards {
            flex-direction: column;
            align-items: center;
        }

        .preview-card {
            max-width: 100%;
        }

        .cta-title {
            font-size: 2.2rem;
        }
    }

    @@media (max-width: 480px) {
        .hero-title {
            font-size: 2rem;
        }

        .hero-subtitle {
            font-size: 1rem;
        }

        .mockup-dashboard {
            width: 100%;
            max-width: 350px;
        }
    }
</style>