@page "/timeline"
@using SecureJournal.Data.Models
@inject JournalEntryService Entries

<div class="min-h-screen bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-900 dark:to-neutral-800 p-4 md:p-8">
    <div class="max-w-4xl mx-auto">
        
        @* Header *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 shadow-sm mb-8">
            <div class="flex items-center gap-3 mb-2">
                <span class="material-icons text-green-600 text-3xl">history</span>
                <h1 class="text-4xl font-bold text-neutral-900 dark:text-white">Timeline</h1>
            </div>
            <p class="text-neutral-600 dark:text-neutral-400">Your journal entries organized chronologically</p>
        </div>

        @* Pagination Controls *@
        <div class="flex items-center justify-between mb-6 bg-white dark:bg-neutral-800 rounded-xl border border-neutral-200 dark:border-neutral-700 p-4">
            <button class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition disabled:opacity-50" 
                    @onclick="PrevPage" 
                    disabled="@(pageIndex == 0)">
                <span class="material-icons" style="display: inline; vertical-align: middle; font-size: 18px;">arrow_back</span> Previous
            </button>
            <div class="text-neutral-700 dark:text-neutral-300 font-medium">
                Page <span class="font-bold">@(pageIndex + 1)</span>
            </div>
            <button class="px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg transition disabled:opacity-50" 
                    @onclick="NextPage" 
                    disabled="@(!hasMore)">
                Next <span class="material-icons" style="display: inline; vertical-align: middle; font-size: 18px;">arrow_forward</span>
            </button>
        </div>

        @* Timeline Items *@
        <div class="space-y-4">
            @if (items.Count == 0)
            {
                <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 text-center">
                    <span class="material-icons text-4xl text-neutral-400 mb-2 block">article</span>
                    <p class="text-neutral-600 dark:text-neutral-400">No entries found</p>
                </div>
            }
            else
            {
                @foreach (var (e, index) in items.Select((x, i) => (x, i)))
                {
                    <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-6 hover:shadow-md transition">
                        <div class="flex items-start gap-4">
                            @* Timeline dot *@
                            <div class="flex flex-col items-center gap-2 pt-1">
                                <div class="w-4 h-4 rounded-full bg-green-600 border-4 border-white dark:border-neutral-800"></div>
                                @if (index < items.Count - 1)
                                {
                                    <div class="w-1 h-12 bg-green-200 dark:bg-green-900/20"></div>
                                }
                            </div>

                            @* Content *@
                            <div class="flex-1 min-w-0">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex-1">
                                        <h3 class="text-lg font-bold text-neutral-900 dark:text-white break-words">@e.Title</h3>
                                        <div class="flex flex-wrap items-center gap-3 mt-2 text-sm">
                                            <span class="text-green-600 dark:text-green-400 font-medium flex items-center gap-1">
                                                <span class="material-icons" style="font-size: 16px;">calendar_today</span>
                                                @e.EntryDate.ToString("MMM dd, yyyy")
                                            </span>
                                            <span class="text-cyan-600 dark:text-cyan-400">@e.Category</span>
                                        </div>
                                    </div>

                                    <a class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white text-sm font-medium rounded-lg transition whitespace-nowrap" 
                                       href="@($"/entry/{e.Id}")">
                                        Open
                                    </a>
                                </div>

                                @* Mood & Tags *@
                                <div class="mt-3 space-y-2">
                                    @if (!string.IsNullOrWhiteSpace(e.PrimaryMood))
                                    {
                                        <div class="text-sm flex items-center gap-2">
                                            <span class="font-medium text-neutral-700 dark:text-neutral-300">Mood:</span>
                                            <span class="inline-block px-3 py-1 bg-orange-100 dark:bg-orange-900/20 text-orange-700 dark:text-orange-300 rounded-full text-xs font-medium">@e.PrimaryMood</span>
                                        </div>
                                    }

                                    @if (!string.IsNullOrWhiteSpace(e.TagsCsv))
                                    {
                                        <div class="text-sm flex items-center gap-2 flex-wrap">
                                            <span class="font-medium text-neutral-700 dark:text-neutral-300">Tags:</span>
                                            @foreach (var tag in e.TagsCsv.Split(','))
                                            {
                                                <span class="inline-block px-2 py-1 bg-pink-100 dark:bg-pink-900/20 text-pink-700 dark:text-pink-300 rounded text-xs">@tag.Trim()</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

@code {
    private const int PageSize = 8;
    private int pageIndex = 0;
    private bool hasMore = false;
    private List<SecureJournal.Data.Models.JournalEntry> items = new();

    protected override async Task OnInitializedAsync()
    {
        Entries.DataChanged += Refresh;
        await LoadAsync();
    }

    private async void Refresh()
    {
        await LoadAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task LoadAsync()
    {
        items = await Entries.GetPageAsync(pageIndex, PageSize);
        var next = await Entries.GetPageAsync(pageIndex + 1, PageSize);
        hasMore = next.Count > 0;
    }

    private async Task PrevPage()
    {
        if (pageIndex == 0) return;
        pageIndex--;
        await LoadAsync();
    }

    private async Task NextPage()
    {
        if (!hasMore) return;
        pageIndex++;
        await LoadAsync();
    }

    public void Dispose()
    {
        Entries.DataChanged -= Refresh;
    }
}
