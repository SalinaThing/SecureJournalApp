@page "/settings"
@using SecureJournal.Data.Services
@inject AuthService Auth
@inject PinLockService PinLock
@inject NavigationManager Nav

<div class="min-h-screen bg-gradient-to-br from-neutral-50 to-neutral-100 dark:from-neutral-900 dark:to-neutral-800 p-4 md:p-8">
    <div class="max-w-4xl mx-auto space-y-8">
        
        @* Header *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 shadow-sm">
            <h1 class="text-4xl font-bold text-neutral-900 dark:text-white mb-2">Settings</h1>
            <p class="text-neutral-600 dark:text-neutral-400">Manage your account and application preferences</p>
        </div>

        @* Account Section *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-icons text-indigo-600 text-2xl">person</span>
                <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Account</h2>
            </div>

            <div class="space-y-6">
                <div class="pb-6 border-b border-neutral-200 dark:border-neutral-700">
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Username</label>
                    <div class="flex items-center justify-between p-4 bg-neutral-50 dark:bg-neutral-700 rounded-lg">
                        <span class="text-neutral-900 dark:text-white font-medium">@Auth.CurrentUser</span>
                        <span class="text-xs font-semibold text-green-600 bg-green-100 dark:bg-green-900/20 px-3 py-1 rounded-full">Active</span>
                    </div>
                </div>

                <div>
                    <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300 mb-2">Account Status</label>
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-green-600"></div>
                        <span class="text-neutral-900 dark:text-white">Account is secure</span>
                    </div>
                    <p class="text-xs text-neutral-500 dark:text-neutral-400 mt-2">Your data is encrypted and stored locally on your device.</p>
                </div>
            </div>
        </div>

        @* Security Section *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-icons text-green-600 text-2xl">security</span>
                <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Security</h2>
            </div>

            <div class="space-y-6">
                <div class="pb-6 border-b border-neutral-200 dark:border-neutral-700">
                    <div class="flex items-center justify-between mb-3">
                        <label class="block text-sm font-medium text-neutral-700 dark:text-neutral-300">PIN Lock Status</label>
                        <span class="text-sm font-semibold @(PinLock.IsUnlocked ? "text-green-600" : "text-orange-600")">
                            @(PinLock.IsUnlocked ? "ðŸ”“ Unlocked" : "ðŸ”’ Locked")
                        </span>
                    </div>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-4">Your PIN protects your journal from unauthorized access.</p>
                    <button class="px-4 py-2 @(PinLock.IsUnlocked ? "bg-orange-600 hover:bg-orange-700" : "bg-green-600 hover:bg-green-700") text-white font-medium rounded-lg transition"
                            @onclick="() => PinLock.Lock()">
                        @(PinLock.IsUnlocked ? "Lock Journal Now" : "Journal is Locked")
                    </button>
                </div>

                <div>
                    <h3 class="text-sm font-semibold text-neutral-900 dark:text-white mb-3">Security Tips</h3>
                    <ul class="space-y-2">
                        <li class="flex gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                            <span class="text-green-600">âœ“</span>
                            <span>Always lock your journal when sharing your device</span>
                        </li>
                        <li class="flex gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                            <span class="text-green-600">âœ“</span>
                            <span>Keep your PIN private and memorable</span>
                        </li>
                        <li class="flex gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                            <span class="text-green-600">âœ“</span>
                            <span>Your data is stored locally on your device</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        @* Privacy Section *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-neutral-200 dark:border-neutral-700 p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-icons text-purple-600 text-2xl">privacy_tip</span>
                <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Privacy</h2>
            </div>

            <div class="space-y-4">
                <div class="p-4 bg-purple-50 dark:bg-purple-900/20 rounded-lg border border-purple-200 dark:border-purple-700">
                    <h3 class="font-medium text-neutral-900 dark:text-white mb-2">End-to-End Encrypted</h3>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">All your journal entries are encrypted and never leave your device without your permission.</p>
                </div>

                <div class="p-4 bg-blue-50 dark:bg-blue-900/20 rounded-lg border border-blue-200 dark:border-blue-700">
                    <h3 class="font-medium text-neutral-900 dark:text-white mb-2">No Data Sharing</h3>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">We don't collect, share, or sell your personal data. Your privacy is paramount.</p>
                </div>

                <div class="p-4 bg-green-50 dark:bg-green-900/20 rounded-lg border border-green-200 dark:border-green-700">
                    <h3 class="font-medium text-neutral-900 dark:text-white mb-2">Local Storage</h3>
                    <p class="text-sm text-neutral-600 dark:text-neutral-400">All data is stored locally on your device. You have complete control.</p>
                </div>
            </div>
        </div>

        @* Danger Zone *@
        <div class="bg-white dark:bg-neutral-800 rounded-2xl border border-red-200 dark:border-red-700 p-8 shadow-sm">
            <div class="flex items-center gap-3 mb-6">
                <span class="material-icons text-red-600 text-2xl">warning</span>
                <h2 class="text-2xl font-bold text-neutral-900 dark:text-white">Danger Zone</h2>
            </div>

            <div class="space-y-4">
                <div class="p-4 bg-red-50 dark:bg-red-900/20 rounded-lg border border-red-200 dark:border-red-700">
                    <h3 class="font-medium text-red-900 dark:text-red-200 mb-2">Logout</h3>
                    <p class="text-sm text-red-800 dark:text-red-300 mb-4">You will be logged out and returned to the login screen.</p>
                    <button class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white font-medium rounded-lg transition"
                            @onclick="Logout">
                        <span class="material-icons" style="display: inline; vertical-align: middle; font-size: 18px; margin-right: 8px;">logout</span>
                        Logout
                    </button>
                </div>
            </div>
        </div>

        @* Footer *@
        <div class="text-center text-sm text-neutral-500 dark:text-neutral-400 pb-4">
            <p>SecureJournal v1.0.0</p>
            <p class="mt-2">Your private journal, secured. ðŸ”’</p>
        </div>
    </div>
</div>

@code {
    private void Logout()
    {
        Auth.Logout();
        Nav.NavigateTo("/home", forceLoad: true);
    }
}
