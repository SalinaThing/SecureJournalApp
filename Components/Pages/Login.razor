@page "/login"
@inject SecureJournalApp.Services.AuthService AuthService
@inject NavigationManager NavManager

<div class="login-page">
    <div class="login-card">

        <div class="logo-section">
            <div class="lock-icon">🔒</div>
            <h1 class="app-title">SecureJournal</h1>
            <p class="app-subtitle">Enter your PIN to access your secure journal</p>
        </div>

        <div class="form-section">
            <div class="input-group">
                <label for="pin-input">PIN</label>
                <input id="pin-input"
                       type="password"
                       class="pin-input"
                       placeholder="Enter 4–6 digit PIN"
                       maxlength="6"
                       @bind="Pin"
                       @bind:event="oninput"
                       @onkeydown="HandleKeyDown" />
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="error-message">
                    <span class="error-icon">⚠️</span>
                    <span>@ErrorMessage</span>
                </div>
            }

            <button class="login-btn"
                    @onclick="HandleLogin"
                    disabled="@(string.IsNullOrWhiteSpace(Pin) || isLoading)">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Authenticating...</span>
                }
                else
                {
                    <span>Login →</span>
                }
            </button>
        </div>

        <div class="footer-section">
            <p class="security-info">🔐 Your data is encrypted and secure</p>
        </div>

    </div>
</div>

@code {
    private string Pin = string.Empty;
    private string ErrorMessage = string.Empty;
    private bool isLoading;

    private async Task HandleLogin()
    {
        ErrorMessage = string.Empty;

        if (Pin.Length < 4)
        {
            ErrorMessage = "PIN must be at least 4 digits";
            return;
        }

        isLoading = true;
        await Task.Delay(300); // Simulate auth

        if (AuthService.Login(Pin))
        {
            NavManager.NavigateTo("/dashboard", true);
        }
        else
        {
            ErrorMessage = "Invalid PIN. Please try again.";
            Pin = string.Empty;
        }

        isLoading = false;
    }

    private void HandleKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !isLoading)
        {
            _ = HandleLogin();
        }
    }
}

