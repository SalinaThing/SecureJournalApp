@page "/features"
@inject NavigationManager Navigation

<div class="features-page">
    <!-- Header -->
    <header class="page-header">
        <div class="container">
            <h1 class="page-title">Features</h1>
            <p class="page-subtitle">Discover everything SecureJournal has to offer</p>
        </div>
    </header>

    <!-- Main Features -->
    <section class="main-features">
        <div class="container">
            <!-- Features Grid from original homepage -->
            <div class="features-grid">
                <!-- Feature 1 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3 class="feature-title">Secure & Private</h3>
                    <p class="feature-description">
                        Password/PIN protected with all data stored locally on your device. Your thoughts remain yours alone.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> Local data storage</li>
                        <li><i class="fas fa-check"></i> PIN/Password protection</li>
                        <li><i class="fas fa-check"></i> No cloud storage</li>
                    </ul>
                </div>

                <!-- Feature 2 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <h3 class="feature-title">Mood Tracking</h3>
                    <p class="feature-description">
                        Track primary and secondary moods with analytics to understand emotional patterns over time.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> Primary & secondary moods</li>
                        <li><i class="fas fa-check"></i> Mood history timeline</li>
                        <li><i class="fas fa-check"></i> Emotional pattern analysis</li>
                    </ul>
                </div>

                <!-- Feature 3 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <h3 class="feature-title">Smart Tagging</h3>
                    <p class="feature-description">
                        Organize entries with custom tags and predefined categories for easy retrieval and analysis.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> Custom tags creation</li>
                        <li><i class="fas fa-check"></i> Predefined categories</li>
                        <li><i class="fas fa-check"></i> Tag frequency analysis</li>
                    </ul>
                </div>

                <!-- Feature 4 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <h3 class="feature-title">Insightful Analytics</h3>
                    <p class="feature-description">
                        Visual dashboards showing mood distribution, streaks, most frequent tags, and word count trends.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> Mood distribution charts</li>
                        <li><i class="fas fa-check"></i> Writing habit analysis</li>
                        <li><i class="fas fa-check"></i> Tag cloud visualization</li>
                    </ul>
                </div>

                <!-- Feature 5 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3 class="feature-title">Daily Streaks</h3>
                    <p class="feature-description">
                        Built-in streak tracking to encourage consistent journaling habits and celebrate your progress.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> Current streak tracking</li>
                        <li><i class="fas fa-check"></i> Longest streak history</li>
                        <li><i class="fas fa-check"></i> Achievement badges</li>
                    </ul>
                </div>

                <!-- Feature 6 -->
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-file-export"></i>
                    </div>
                    <h3 class="feature-title">Export Options</h3>
                    <p class="feature-description">
                        Export your journals as PDF files by date range for backup or external use.
                    </p>
                    <ul class="feature-details">
                        <li><i class="fas fa-check"></i> PDF export with formatting</li>
                        <li><i class="fas fa-check"></i> Date range selection</li>
                        <li><i class="fas fa-check"></i> Batch export capabilities</li>
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works Section -->
    <section class="how-it-works">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">How It Works</h2>
                <p class="section-subtitle">Simple steps to start your journaling journey</p>
            </div>

            <div class="steps-container">
                <!-- Steps from original homepage -->
                <div class="step">
                    <div class="step-number">1</div>
                    <div class="step-content">
                        <h3>Create Your Account</h3>
                        <p>Register with a secure password or PIN that only you know</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">2</div>
                    <div class="step-content">
                        <h3>Write Daily Entries</h3>
                        <p>One entry per day with rich-text or Markdown formatting</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">3</div>
                    <div class="step-content">
                        <h3>Track Your Mood</h3>
                        <p>Select primary and secondary moods to capture your emotional state</p>
                    </div>
                </div>

                <div class="step">
                    <div class="step-number">4</div>
                    <div class="step-content">
                        <h3>Review Insights</h3>
                        <p>Use analytics to understand patterns in your thoughts and emotions</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA -->
    <section class="features-cta">
        <div class="container">
            <h2>Ready to Experience These Features?</h2>
            <p>Start your journaling journey today with Peaceful Journal</p>
            <button class="btn btn-primary btn-xl" @onclick="NavigateToRegister">
                <i class="fas fa-user-plus me-2"></i>Get Started Now
            </button>
        </div>
    </section>
</div>

@code {
    private void NavigateToHome()
    {
        Navigation.NavigateTo("/");
    }

    private void NavigateToRegister()
    {
        Navigation.NavigateTo("/register");
    }
}

