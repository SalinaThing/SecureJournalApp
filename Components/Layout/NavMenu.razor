@inject SecureJournalApp.Services.AuthService AuthService
@inject NavigationManager NavigationManager
@implements IDisposable

<div class="app-sidebar @(isCollapsed ? "collapsed" : "")">
    <!-- Logo/Brand Area -->
    <div class="sidebar-header">
        <div class="sidebar-brand">
            <i class="fas fa-book-journal-whills"></i>
            <span class="brand-text">SecureJournal</span>
        </div>
        <button class="sidebar-toggle" @onclick="ToggleSidebar">
            <i class="fas fa-bars"></i>
        </button>
    </div>

    <!-- User Info (When Logged In) -->
    @if (AuthService.IsLoggedIn)
    {
        <div class="user-profile">
            <div class="user-avatar">
                <i class="fas fa-user-circle"></i>
            </div>
            <div class="user-info">
                <div class="user-name">Journal User</div>
                <div class="user-status">
                    <span class="status-indicator active"></span>
                    <span>Online</span>
                </div>
            </div>
        </div>
    }

    <!-- Navigation Menu -->
    <div class="sidebar-nav">
        @if (AuthService.IsLoggedIn)
        {
            <!-- Authenticated Navigation -->
            <div class="nav-section">
                <div class="section-label">Daily Journal</div>
                <NavLink class="nav-item" href="/today" Match="NavLinkMatch.All" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-pen-alt"></i>
                    </div>
                    <span class="nav-text">Today's Entry</span>
                    <span class="nav-badge today">Today</span>
                </NavLink>

                <NavLink class="nav-item" href="/dashboard" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-tachometer-alt"></i>
                    </div>
                    <span class="nav-text">Dashboard</span>
                    <span class="nav-badge streak">14🔥</span>
                </NavLink>


            </div>

            <div class="nav-section">
                <div class="section-label">Explore</div>
                 <NavLink class="nav-item" href="/calendar" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <span class="nav-text">Calendar View</span>
                </NavLink>

                <NavLink class="nav-item" href="/timeline" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-stream"></i>
                    </div>
                    <span class="nav-text">Timeline</span>
                </NavLink>
            </div>

            <div class="nav-section">
                <div class="section-label">Insights</div>
                <NavLink class="nav-item" href="/analytics" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-chart-pie"></i>
                    </div>
                    <span class="nav-text">Analytics</span>
                </NavLink>

                <NavLink class="nav-item" href="/mood-tracking" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-heart"></i>
                    </div>
                    <span class="nav-text">Mood Tracking</span>
                </NavLink>

                <NavLink class="nav-item" href="/tags" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-tags"></i>
                    </div>
                    <span class="nav-text">Tags & Categories</span>
                </NavLink>
            </div>

            <div class="nav-section">
                <div class="section-label">Settings</div>
                <NavLink class="nav-item" href="/export" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-file-export"></i>
                    </div>
                    <span class="nav-text">Export Journal</span>
                </NavLink>

                <NavLink class="nav-item" href="/settings" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-cog"></i>
                    </div>
                    <span class="nav-text">Settings</span>
                </NavLink>

                <a class="nav-item logout-item" href="" @onclick="Logout">
                    <div class="nav-icon">
                        <i class="fas fa-sign-out-alt"></i>
                    </div>
                    <span class="nav-text">Logout</span>
                </a>
            </div>

            <!-- Quick Stats -->
            <div class="quick-stats">
                <div class="stat-item">
                    <div class="stat-value">156</div>
                    <div class="stat-label">Entries</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value streak-value">14</div>
                    <div class="stat-label">Day Streak</div>
                </div>
                <div class="stat-item">
                    <div class="stat-value">78%</div>
                    <div class="stat-label">Positive</div>
                </div>
            </div>
        }
        else
        {
            <!-- Guest Navigation -->
            <div class="nav-section">
                <div class="section-label">Welcome</div>
                <NavLink class="nav-item" href="/" Match="NavLinkMatch.All" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-home"></i>
                    </div>
                    <span class="nav-text">Home</span>
                </NavLink>

                 <NavLink class="nav-item" href="/features" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <span class="nav-text">Features</span>
                </NavLink>

                <NavLink class="nav-item" href="/about" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-info-circle"></i>
                    </div>
                    <span class="nav-text">About Us</span>
                </NavLink>
            </div>

            <div class="nav-section">
                <div class="section-label">Get Started</div>


                <NavLink class="nav-item" href="/register" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-user-plus"></i>
                    </div>
                    <span class="nav-text">Register</span>
                    <span class="nav-badge free">FREE</span>
                </NavLink>

                <NavLink class="nav-item" href="/login" ActiveClass="active">
                    <div class="nav-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <span class="nav-text">Login</span>
                </NavLink>
            </div>
        }

        <!-- Footer Info -->
        <div class="sidebar-footer">
            <div class="footer-text">
                <i class="fas fa-lock"></i>
                <span>Your data is stored locally</span>
            </div>
            <div class="app-version">v1.0.0</div>
        </div>
    </div>
</div>

